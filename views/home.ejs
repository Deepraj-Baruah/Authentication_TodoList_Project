<%- include("header.ejs") %>
    <div class="flex items-center justify-center min-h-screen">
        <div class="bg-white shadow-md rounded-lg p-8 max-w-md w-full">
            <h2 class="text-2xl font-bold mb-5 text-center">Welcome</h2>
            <div class="mb-8">
                <ul class="flex justify-center mb-4">
                    <li class="mr-4"><a href="#login" class="text-blue-500 hover:underline">Login</a></li>
                    <li><a href="#register" class="text-blue-500 hover:underline">Register</a></li>
                </ul>
                <div id="login">
                    <h3 class="text-xl font-semibold mb-4">Login</h3>
                    <form action="/login" method="POST">
                        <div class="mb-4">
                            <label for="login-email" class="block text-gray-700">Email</label>
                            <input type="email" id="login-email" class="mt-1 p-2 w-full border border-gray-300 rounded-md" name="email" required>
                        </div>
                        <div class="mb-4 password-wrapper">
                            <label for="login-password" class="block text-gray-700">Password</label>
                            <input type="password" id="login-password" class="mt-1 p-2 w-full border border-gray-300 rounded-md" name="password" required>
                            <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
                        </div>
                        <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600">Login</button>
                    </form>
                    <div class="container mt-5">
                        <div class="row justify-content-center">
                          <div class="col-sm-4">
                            <div class="card">
                              <div class="card-body">
                                <a class="btn btn-google btn-block" href="/auth/google" role="button">
                                  <i class="fab fa-google"></i>
                                  Sign In with Google
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
                <div id="register" class="hidden">
                    <h3 class="text-xl font-semibold mb-4">Register</h3>
                    <form action="/register" method="POST">
                        <div class="mb-4">
                            <label for="register-username" class="block text-gray-700">Username</label>
                            <input type="text" id="register-username" class="mt-1 p-2 w-full border border-gray-300 rounded-md" name="username" required>
                        </div>
                        <div class="mb-4">
                            <label for="register-email" class="block text-gray-700">Email</label>
                            <input type="email" id="register-email" class="mt-1 p-2 w-full border border-gray-300 rounded-md" name="email" required>
                        </div>
                        <div class="mb-4 relative">
                            <label for="register-password" class="block text-gray-700">Password</label>
                            <input type="password" id="register-password" class="mt-1 p-2 w-full border border-gray-300 rounded-md" name="password" required>
                            <span class="toggle-password2" onclick="togglePasswordVisibility()">üëÅÔ∏è</span>
                        </div>
                        <button type="submit" class="w-full bg-green-500 text-white p-2 rounded-md hover:bg-green-600">Register</button>
                    </form>
                    <div class="container mt-5">
                        <div class="row justify-content-center">
                          <div class="col-sm-4">
                            <div class="card">
                              <div class="card-body">
                                <a class="btn btn-google btn-block" href="/auth/google" role="button">
                                  <i class="fab fa-google"></i>
                                  Sign Up with Google
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
            </div>
        </div>
    </div>
